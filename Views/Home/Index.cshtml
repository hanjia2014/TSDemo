<div data-ng-controller="DemoApp.Controllers.HomeController as homeController">
    {{Message}}
    <br />
    {{homeController.Message}}
    <br />
    {{Companies.length}}
    @section SPAViews {
        @Html.Partial("_Home")
    }
    <div data-ng-repeat="company in Companies">
        {{company.name}}
        <div data-ng-repeat="employee in company.employees">
            {{employee.name}}
        </div>
    </div>

    <ul></ul>
    <input data-ng-model="homeController.E_Name" placeholder="Name" />
    <input data-ng-model="homeController.E_Age" placeholder="Age" />
    <select data-ng-model="homeController.E_CompanyId">
        <option data-ng-repeat="company in Companies" value="{{company.id}}">{{company.name}}</option>
    </select>

    <button data-ng-click="homeController.addEmployee()">Add</button>
</div>